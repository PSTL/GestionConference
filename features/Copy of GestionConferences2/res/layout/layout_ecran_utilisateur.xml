<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc" >

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/boutonModeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="affichageAdmin"
                android:text="@string/admin" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#0099cc" >

        <LinearLayout
            android:id="@+id/linearBouton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/linearBouton1"
                android:layout_width="fill_parent"
                android:layout_height="172dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="25dp" >

                    <Button
                        android:id="@+id/boutonCalendrier"
                        android:layout_width="132dp"
                        android:layout_height="122dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_button"
                        android:drawableTop="@drawable/calendrier_logo"
                        android:src="@drawable/calendrier"
                        android:text="@string/calendar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp" >

                    <Button
                        android:id="@+id/boutonMesConferences"
                        android:layout_width="132dp"
                        android:layout_height="122dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_button"
                        android:drawableTop="@drawable/mes_conf64"
                        android:text="@string/myconference" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearBouton2"
                android:layout_width="fill_parent"
                android:layout_height="172dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="25dp" >

                    <Button
                        android:id="@+id/boutonOptions"
                        android:layout_width="132dp"
                        android:layout_height="122dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_button"
                        android:text="@string/options" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp" >

                    <Button
                        android:id="@+id/boutonConferenceProche"
                        android:layout_width="132dp"
                        android:layout_height="122dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_button"
                        android:text="@string/nearconference" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>