<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gestionconferences"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gestionconferences.MainActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gestionconferences.NouvelleConferenceActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mesconferences.conferences.MesConferencesActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mesconferences.presentations.MyPresentationActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mesconferences.presentations.PresentationView"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gestionconferences.Option"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.gestionconferences.CalendrierActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>